<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="pojo.Personne" table="PERSONNE">
        <id name="idPersonne" type="int" column="ID_PERSONNE"></id>
        <property name="nomPersonne" column="NOM_PERSONNE" type="string"/>  
        <property name="dateNaissance" column="DATE_NAISSANCE" type="date"/>
        <property name="lieuNaissance" column="LIEU_NAISSANCE" type="string"/>
        <property name="photo" column="PHOTO" type="string"/>
        <property name="bio" column="BIO" type="string"/>
        <property name="categoriePersonne" column="CATEGORIE_PERSONNE" type="string"/>
    </class>
</hibernate-mapping>
